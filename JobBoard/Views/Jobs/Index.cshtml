<!DOCTYPE html>
<html>

<head>
  <title>JobCon</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <style type="text/css">
  </style>
</head>

<body class="bg-secondary text-light">
  <h1 class="text-center">Job Offers</h1>
  <div class="container mt-5 ">
    @using JobBoard.Models;
    @if (Model.Count == 0)
    {
      <p class="h5 text-center">There are no job offers yet</p>
    }
    else
    {
      <p class="text-center h5">This Are the job you have offered</p>
      <p class="text-center h7">Click On Them To See Their Details</p>
        <ul class="bg-light p-5 text-secondary">
            @foreach (Job job in Model)
            {
                 <li class="h5 mt-3"><a href="/jobs/@job.Id" class="text-secondary">@job.Title - @job.Company</a></li>   
            }
        </ul>
        
    }
  <p class = "text-center"><a href="/jobs/new" class="h6 btn btn-info mt-4">Add New Job Offer</a></p>
  </div>
</body>

</html>